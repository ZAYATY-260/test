<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/style/Style.css">
    <link rel="stylesheet" href="/style/profile.css">
    <link rel="stylesheet" href="/style/framework.css">
    <link rel="stylesheet" href="/style/master.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow-y: scroll; /* Allow vertical scrolling */
        }

        .table-container {
            max-height: 1000px; /* Set the maximum height of the table container */
            overflow-y: auto; /* Enable vertical scrolling for the table container */
            overflow-x: auto; /* Hide horizontal scrollbar if present */
            margin-left: 20px;
            margin-top: 20px;
            margin-right: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table,
        th,
        td {
            border: 1px solid black;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>

<body>
    <div class="page d-flex">
        <%- include("../partials/sidebar_admin.ejs") %>
        <div class="content w-full  ">
            <div class="table-container ">
                <table>
                    <thead>
                        <tr>
                            <th>product name</th>
                            <th>Price</th>
                            <th>size</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample data, replace with actual data from your database -->
                        <% order.items.forEach((product)=> { %>
                        <%- include('../partials/view_order_card', { product: product }) %>
                        <% }); %>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>
