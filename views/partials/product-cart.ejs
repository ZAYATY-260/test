
<tr>
    
    <td data-th="Product">
        <div class="row ">
            
            <div class="col-md-3 text-left ">
                <a href="/view/<%= product.item._id %>">
                <img src="../<%= product.item.images[0] %>" alt="" class="img-fluid  rounded mb-2 shadow ">
            </a>
            </div>
      
            <div class="col-md-9 text-left mt-sm-2 bg-light">
                <h4 class="bg-light"><%= product.item.pname %></h4>
                
            </div>
        </div>

    </td>
    <td data-th="size" style="font-weight: bolder;"><%= product.size %> </td>
    <td data-th="Price"><%= product.item.Price %> EGP</td>
    <td data-th="Quantity">
        <input type="number" class="form-control form-control-lg text-center" value="<%= product.qty %>"  readonly >
    </td>
    <td class="actions" data-th="">
        <div class="text-right">
          <div class="text-right bg-light">
              <a href="/cart/delete/<%= product.item._id %>/<%= product.size %>" class="btn btn-white border-secondary  btn-md mb-2 ">
                <i class="far fa-trash-can text-warning" ></i>
              </a>
        </div>
    </td>
</tr>

