
<tr>
    
    <td data-th="Product">
        <div class="row bg-light">
            <div class="col-md-3 text-left bg-light">
                <img src="<%= product.item.Image %>" alt="" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
            </div>
            <div class="col-md-9 text-left mt-sm-2 bg-light">
                <h4 class="bg-light"><%= product.item.pname %></h4>
                <p class="font-weight-light"></p>
            </div>
        </div>
    </td>
    <td data-th="Price"><%= product.item.Price %> EGP</td>
    <td data-th="Quantity">
        <input type="number" class="form-control form-control-lg text-center" value="<%= product.qty %>"  readonly >
    </td>
    <td class="actions" data-th="">
        <div class="text-right">
          <div class="text-right bg-light">
              <a href="/cart/delete/<%= product.item._id %>" class="btn btn-white border-secondary bg-white btn-md mb-2 ">
                  <i class="bi-trash-fill"></i>
              </a>
        </div>
    </td>
</tr>
