<div class="col">
    <a href="/view/<%= product._id %>">
    <div class="card" style="max-width: 300px; position: relative;">
      <div class="bg-image hover-zoom" style="position: relative;">
        <img src="../images/product7.jpeg" class="card-img-top img-fluid" alt="Product Image">
        <!-- Badge for sold out -->
        <span class="badge bg-danger position-absolute bottom-0 end-0 m-2 p-2">Sold Out</span>
      </div>
      <div class="card-body">
        <h5 class="card-title text-light"><%= product.pname %></h5>
        <p class="card-text text-light">LE <%= product.Price %> EGP</p>
      </div>
    </div>
    </a>
  </div>